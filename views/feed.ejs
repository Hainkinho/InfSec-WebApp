<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="stylesheet" href="/views/style.css">
    <title>Document</title>
</head>
<body>

    <header id="navbar">
        <div class="container">
            <a href="/" id="nav-logo"><i class="fa-solid fa-face-smile"></i> HappyFeed</a>

            <div class="d-flex">
                <p><%- username %> ðŸ‘‹ </p>

                <button id="logout-btn" class="btn btn-secondary">Logout</button>
            </div>
        </div>
    </header>

    <script>
        const logoutBtn = document.getElementById('logout-btn')
        logoutBtn.addEventListener('click', async (e) => {
            console.log("Logout")
            const res = await fetch('http://localhost:5000/api/users/logout')
            if (res.redirected) {
                window.location.href = res.url
            }
        })
    </script>


    <div class="feed-container">

    <% if (!canEdit) { %> 
        <% if (typeof query == 'string' && query) { %>
            <p>Query: <%- query %> </p>
        <% } %> 

        <form id="searchbar-form" method="GET">
            <div class="form-group mb-3">
                <input type="name" name="query" class="form-control" id="searchbar"  placeholder="Search ..." value="<%= locals.query || "" %>">
            </div>
        </form>

        <section class="feed-section-container" id="post-creator-container">
            <div class="comment-form">
                <input type="text" class="comment-field" placeholder="Tell us somethingâ€¦">
    
                <button class="btn btn-primary comment-btn" id="add-post-btn" disabled>Submit</button>
            </div>
        </section>

    <% } %> 

    <% for (const i in posts) { %>     
        <% const post = posts[i] %> 
        <section class="feed-section-container post-container" id="<%- post._id %>">

            <% if (canEdit) { %> 
                <button class="delete-post-btn">x</button>
            <% } %> 

            <p class="post-timestamp"><%- post.creationDateString %></p>

            <p class="post-text my-2"><%- post.text %></p> 

            <p class="post-author mb-4"><%- post.user.name %></p>

            <div class="comment-form">
                <input type="text" class="comment-field" placeholder="Add commentâ€¦">
    
                <button class="btn btn-primary comment-btn" disabled>Comment</button>
            </div>

            <p class="<%- post.comments.length == 0 ? "mb-0" : "mb-2" %>">Comments: <%- post.comments.length %> </p>

            <% for (const commentIndex in post.comments) { %>
                <% const comment = post.comments[commentIndex] %> 
                <div class="comment">
                    <p><b><%- comment.user.name %>:</b> <%- comment.text %> </p>

                    <% if (canEdit) { %> 
                        <button class="delete-comment-btn" id="<%- comment._id %>" >x</button>
                    <% } %> 
                </div>
            <% } %>  
        </section>
    <% } %> 

    </div>


    <footer>
        <p><i class="fa-solid fa-heart"></i>  Made with love  <i class="fa-solid fa-heart"></i></p>
        <p>Florian Hainka, Natalie Herbst, Joachim KÃ¶lz, Elena Popp</p>
    </footer>



    <script>
        const commentTextFields = document.getElementsByClassName("comment-field") 
        const commentBtns = document.getElementsByClassName("comment-btn")
        const commentBtnsArray = Array.from(commentBtns).filter(el => {el.id != 'add-post-btn'})
        const addPostBtn = document.getElementById("add-post-btn")

        Array.from(commentTextFields).forEach(el => {
            el.addEventListener('input', (e) => {
                const textField = e.target
                const commentBtn = textField.parentElement.querySelector('.comment-btn')
                // console.log(commentBtn)
                commentBtn.disabled = textField.value.length <= 0
                console.log(commentBtn.disabled)
            })
        })

        commentBtnsArray.forEach(el => {
            el.addEventListener('click', clickedCommentBtn)
        })

        async function clickedCommentBtn(e) {
            const btnEl = e.target
            const postContainerEl = btnEl.parentElement.parentElement
            console.log(postContainerEl)
            const postID = postContainerEl.id
            const commentFieldEl = postContainerEl.querySelector('.comment-field')
            const text = commentFieldEl.value

            console.log(postID, text)

            const header = {
                method: 'POST',
                headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
                },
                body: JSON.stringify({ postID: postID, text: text })
            }

            const res = await fetch('http://localhost:5000/api/posts/comment', header)
            const json = await res.json()
            if (res.status == 200) {
                window.location.reload();
            }
        }

        addPostBtn.addEventListener('click', async e => {
            const btnEl = e.target
            const postContainerEl = btnEl.parentElement.parentElement
            const commentFieldEl = postContainerEl.querySelector('.comment-field')
            const postText = commentFieldEl.value

            console.log(postText)

            const header = {
                method: 'POST',
                headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
                },
                body: JSON.stringify({ text: postText })
            }

            const res = await fetch('http://localhost:5000/api/posts', header)
            const json = await res.json()
            if (res.status == 200) {
                window.location.reload();
            }
        })

    </script>

    <script>
        const deletePostBtns = document.getElementsByClassName('delete-post-btn')
        const deleteCommentBtns = document.getElementsByClassName('delete-comment-btn')
        
        Array.from(deletePostBtns).forEach(el => {
            el.addEventListener('click', deletePost)
        })

        Array.from(deleteCommentBtns).forEach(el => {
            el.addEventListener('click', deleteComment)
        })

        async function deletePost(e) {
            console.log("Delete Post")
            const deleteBtn = e.target
            const postContainerEl = deleteBtn.parentElement
            const postID = postContainerEl.id
            console.log(postID)

            const header = {
                method: 'DELETE',
                headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
                },
                body: JSON.stringify({ postID: postID })
            }

            const res = await fetch('http://localhost:5000/api/posts/comment', header)
            if (res.status == 200) {
                window.location.reload();
            }
        }

        async function deleteComment(e) {
            console.log("Delete Comment")
            const deleteBtn = e.target
            const commentID = deleteBtn.id
            const postContainerEl = deleteBtn.parentElement.parentElement
            const postID = postContainerEl.id
            console.log(postID, commentID)

            const header = {
                method: 'DELETE',
                headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
                },
                body: JSON.stringify({ postID: postID, commentID: commentID })
            }

            const res = await fetch('http://localhost:5000/api/posts/comment', header)
            if (res.status == 200) {
                window.location.reload();
            }
        }

    </script>
</body>
</html>